@startuml
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Container.puml

Person(user_request_input, "Data input and request")
Person(user_admin, "Admin")
Person_Ext(user_public, "Public (unauthorized)")

System_Boundary(seedcase, "Seedcase instance for Data Resource") {
  Container(web_framework, "Web Interface")
  Container(id_management, "User ID Authentication")
  Container(api_framework, "API Layer")

  Container_Boundary(backend, "Backend environment for data") {
    ContainerDb(backend_database, "Database")
    ContainerDb(backend_file_storage, "File Storage")
    ContainerDb(backend_large_file_storage, "Large File Storage")
  }
}
System_Ext(external_server, "External secure server")

Rel(user_public, web_framework, "View general details about Data Resource")
Rel(user_request_input, web_framework, "Input to or request data from Data Resource")
Rel(user_admin, web_framework, "Create, manage, and update data projects")
Rel(id_management, web_framework, "User Authetication")
Rel(web_framework, id_management, "")
Rel(web_framework, api_framework, "Send user requests using API communication protocols")
Rel(api_framework, backend_database, "Database-specific commands")
Rel(api_framework, backend_file_storage, "Request to get, create, update, or remove files")
Rel(api_framework, backend_large_file_storage, "Request to get, create, update, or remove files")
Rel(api_framework, external_server, "Data extract for approved data projects")
@enduml
